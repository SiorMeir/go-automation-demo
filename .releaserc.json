{
  "branches": ["main", "master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    "@semantic-release/git",
    "@semantic-release/github"
  ],
  "preset": "angular",
  "releaseRules": [
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "fix",
      "release": "patch"
    },
    {
      "type": "docs",
      "release": "patch"
    },
    {
      "type": "style",
      "release": "patch"
    },
    {
      "type": "refactor",
      "release": "patch"
    },
    {
      "type": "perf",
      "release": "patch"
    },
    {
      "type": "test",
      "release": "patch"
    },
    {
      "type": "chore",
      "release": "patch"
    },
    {
      "type": "ci",
      "release": "patch"
    },
    {
      "type": "build",
      "release": "patch"
    },
    {
      "type": "revert",
      "release": "patch"
    }
  ],
  "parserOpts": {
    "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
  },
  "writerOpts": {
    "groupBy": "type",
    "commitGroupsSort": "title",
    "commitsSort": "header"
  }
}
